{
  "name": "@fin/ctl",
  "description": "Financial management CLI tool",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "finctl": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf ./dist",
    "dev": "tsx src/index.ts",
    "start": "cross-env NODE_ENV=development MONGODB_URI=\"mongodb://localhost:27017/fin?replicaSet=rs0&directConnection=true\" node dist/index.js",
    "link": "yarn build && yarn link"
  },
  "dependencies": {
    "@fin/domain": "1.0.0",
    "@fin/infrastructure": "1.0.0",
    "@fin/ioc": "1.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "0.6.5",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "pdf-parse": "^1.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
