{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@fin/application": ["../application/src"],
      "@fin/application/*": ["../application/src/*"],
      "@fin/domain": ["../domain/src/index.ts"],
      "@fin/domain/*": ["../domain/src/*"],
      "@fin/infrastructure": ["../infrastructure/src"],
      "@fin/infrastructure/*": ["../infrastructure/src/*"],
      "@fin/ioc": ["../ioc/src"],
      "@fin/ioc/*": ["../ioc/src/*"],
      "@fin/bill-parser": ["../bill-parser/src"],
      "@fin/bill-parser/*": ["../bill-parser/src/*"],
      "@fin/bill-parser-decorator": ["../bill-parser-decorator/src"],
      "@fin/bill-parser-decorator/*": ["../bill-parser-decorator/src/*"],
      "@fin/bill-parser-pdf-parse": ["../bill-parser-pdf-parse/src"],
      "@fin/bill-parser-pdf-parse/*": ["../bill-parser-pdf-parse/src/*"],
      "@fin/bill-parser-claude": ["../bill-parser-claude/src"],
      "@fin/bill-parser-claude/*": ["../bill-parser-claude/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
